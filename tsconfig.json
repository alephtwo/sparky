{
  "include": ["src"],
  "compilerOptions": {
    "types": ["vite/client"],
    "lib": ["dom", "es2023"],
    "target": "es2022",
    "sourceMap": true,
    "skipLibCheck": true,
    "noEmit": true,
    "allowJs": true,
    "module": "es2022",
    "moduleResolution": "bundler",
    "jsx": "react",
    "resolveJsonModule": true,
    "strict": true
  }
}
